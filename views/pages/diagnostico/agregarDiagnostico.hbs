{{> header}}
<center><h2 style="color:#5D8BF4">{{viewTitle}}</h2></center>
<form action="/diagnostico" method="POST" style="margin: auto; width: 800px;">    
    <input type="hidden" name="_id" value="{{diagnostico._id}}" />

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">ID Diagnostico</label>
        <br>
        <div class="col-sm-10">
        <input type="text" name="idDiag" value="{{diagnostico.idDiag}}" class="form-control" placeholder="ID Diagnostico">
        </div>
    </div>

        <br>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">ID Paciente</label>
        <br>
        <div class="col-sm-10">
        <input type="text" name="idpaciente" value="{{diagnostico.idpaciente}}" class="form-control" placeholder="ID Paciente">
        </div>
    </div>

        <br>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Diagnostico</label>
        <br>
        <div class="col-sm-10">
        <input type="text" name="diag" value="{{diagnostico.diag}}" class="form-control" placeholder="Diagnostico">
        </div>
    </div>

        <br>

    <center><button type="submit" style="background-color:#5D8BF4; border-color:#5D8BF4; color:#DFF6FF" class="btn btn-lg active">Guardar</button></center>
</form>